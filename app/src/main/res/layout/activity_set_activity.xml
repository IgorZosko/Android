<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetActivity">
    <LinearLayout
        android:id="@+id/SetActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <Button
                android:id="@+id/add"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:onClick="onClick"
                android:text="Add Order" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/tl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:id="@+id/textView"
                    android:textSize="15sp"
                    android:text="Brand Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/items_class"/>
                <Spinner
                    android:id="@+id/droplist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/items_class"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView1"
                    android:textSize="15sp"
                    android:text="Model Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/droplist1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView2"
                    android:textSize="15sp"
                    android:text="Full Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText android:id="@+id/textEdit"
                    android:textSize="22sp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textView3"
                    android:textSize="15sp"
                    android:text="Number Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText android:id="@+id/textEdit1"
                    android:textSize="22sp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
            </TableRow>
            <Button
                android:id="@+id/addOrder"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:onClick="AddOrder"
                android:text="Add" />
        </TableLayout>


        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/activity_display_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designed by Ihor Zosko"
                android:textSize="20sp"
                android:layout_gravity="bottom|center_horizontal"/>
        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>